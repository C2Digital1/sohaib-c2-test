{% comment %}
Required values
name: <icon name>
{% endcomment %}
{% if format and format == 'solid' %}
  {% render 'icon_solid', name: name, icon_class: icon_class %}
{% elsif format and format == 'outline' %}
  {% render 'icon_outline', name: name, icon_class: icon_class %}
{% else %}
  {% if settings.icon == 'icon_solid' %}
    {% render 'icon_solid', name: name, icon_class: icon_class %}
  {% elsif settings.icon == 'icon_outline' %}
    {% render 'icon_outline', name: name, icon_class: icon_class %}
  {% endif %}
  
{% endif %}

